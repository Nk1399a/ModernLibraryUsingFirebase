<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent2"
    android:elevation="8dp"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bookImg"
            android:layout_width="120dp"
            android:layout_height="120dp"
            tools:src="@mipmap/ic_launcher"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/booktitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/bookImg"
            tools:text="This is the Book Title" />
        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="By Author"
            android:layout_toRightOf="@id/bookImg"
            android:layout_below="@+id/booktitle"
            android:layout_marginTop="8dp"
            android:textSize="16sp"

            />
        <TextView
            android:id="@+id/available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Availability: "
            android:layout_toRightOf="@id/bookImg"
            android:layout_below="@+id/author"
            android:layout_marginTop="8dp"
            android:textSize="16sp"

            />
        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/available"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/available"
            tools:text="NO"
            />

        <TextView
            android:id="@+id/copiesAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/available"
            android:layout_toRightOf="@id/bookImg"
            android:layout_marginTop="8dp"
            android:text="Copies available: "
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/copiesAvailability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/availability"
            android:layout_toRightOf="@id/copiesAvailable"
            android:layout_alignBaseline="@id/copiesAvailable"
            android:layout_alignParentEnd="true"

            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>